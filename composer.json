{
    "name": "luka/network-address-types",
    "description": "Provides typed value objects for network addresses (IP v4/v6 and MAC)",
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Axel Helmert",
            "email": "axel.helmert@luka.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "LUKA\\Network\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LUKATest\\Network\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-gmp": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2.0",
        "phpunit/phpunit": "^8.5",
        "vimeo/psalm": "^3.8"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "analyse": "psalm",
        "cs-check": "phpcs",
        "infection-test": "infection --min-msi=75 --min-covered-msi=80",
        "check": [
            "@test",
            "@analyse",
            "@cs-check"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-develop": "1.1.x-dev"
        }
    }
}
